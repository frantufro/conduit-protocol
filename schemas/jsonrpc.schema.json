{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cauce-protocol.org/schemas/v1/jsonrpc.schema.json",
  "title": "Cauce JSON-RPC Messages",
  "description": "JSON-RPC 2.0 message formats for Cauce Protocol",
  "$defs": {
    "request": {
      "type": "object",
      "required": ["jsonrpc", "method"],
      "properties": {
        "jsonrpc": {
          "type": "string",
          "const": "2.0"
        },
        "id": {
          "oneOf": [
            { "type": "string" },
            { "type": "integer" }
          ],
          "description": "Request identifier (omit for notifications)"
        },
        "method": {
          "type": "string",
          "minLength": 1,
          "description": "Method name"
        },
        "params": {
          "description": "Method parameters"
        }
      },
      "additionalProperties": false
    },
    "response": {
      "type": "object",
      "required": ["jsonrpc", "id"],
      "oneOf": [
        {
          "properties": {
            "jsonrpc": { "const": "2.0" },
            "id": { "oneOf": [{ "type": "string" }, { "type": "integer" }, { "type": "null" }] },
            "result": { "description": "Result of the method call" }
          },
          "required": ["jsonrpc", "id", "result"],
          "additionalProperties": false
        },
        {
          "properties": {
            "jsonrpc": { "const": "2.0" },
            "id": { "oneOf": [{ "type": "string" }, { "type": "integer" }, { "type": "null" }] },
            "error": { "$ref": "#/$defs/error" }
          },
          "required": ["jsonrpc", "id", "error"],
          "additionalProperties": false
        }
      ]
    },
    "notification": {
      "type": "object",
      "required": ["jsonrpc", "method"],
      "properties": {
        "jsonrpc": {
          "type": "string",
          "const": "2.0"
        },
        "method": {
          "type": "string",
          "minLength": 1
        },
        "params": {
          "description": "Notification parameters"
        }
      },
      "not": {
        "required": ["id"]
      },
      "additionalProperties": false
    },
    "error": {
      "type": "object",
      "required": ["code", "message"],
      "properties": {
        "code": {
          "type": "integer",
          "description": "Error code"
        },
        "message": {
          "type": "string",
          "description": "Error message"
        },
        "data": {
          "description": "Additional error data"
        }
      },
      "additionalProperties": false
    }
  }
}
